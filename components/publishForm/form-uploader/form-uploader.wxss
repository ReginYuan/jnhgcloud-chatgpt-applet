/* components/publishForm/form-uploader/form-uploader.wxss */
.form-uploader {
  width: 100%;
}
.label {
  font-family: 'PingFang SC-Regular';
  font-size: 32rpx;
  color: #222222;
  line-height: 44rpx;
}

.isrequired {
  color: #f94b30;
}

.show {
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.preview {
  margin: 16rpx 32rpx 0 0;
  position: relative;
}

.delete {
  position: absolute;
  right: -8px;
  top: -8px;
}

.tips {
  margin-top: 16rpx;
  font-size: 28rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #b4b4b4;
  line-height: 44rpx;
}
.warn {
  color: #f94b30;
  font-size: 24rpx;
  height: 28rpx;
}

.upload__icon__wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4px;
}

.upload__icon {
  width: 100%;
  height: 100%;
}
