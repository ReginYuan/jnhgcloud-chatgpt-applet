/* components/common/authorization-popup/authorization-popup.wxss */
.authorization {
  width: 100%;
}

.authorization-content {
  box-sizing: border-box;
  padding: 64rpx 48rpx;
}

.title {
  font-size: 36rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #222222;
  line-height: 52rpx;
  text-align: center;
}

.text {
  margin-top: 32rpx;
  font-size: 32rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #888888;
  line-height: 48rpx;
}

.link {
  color: #3a71ff;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 112rpx;
  display: flex;
  justify-content: space-between;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}

.select-option{
  width: 50%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.select-option:first-child {
  border-right: 2rpx solid rgba(0, 0, 0, 0.1);
}
.disagree {
  height: 100%;
  box-sizing: border-box;
  flex: 1 1 auto;
  font-size: 34rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #888888;
  line-height: 110rpx;
  letter-spacing: 1px;
}

.agree {
  height: 100%;
  box-sizing: border-box;
  width: 50%;
  flex: 1 1 auto;
  font-size: 34rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #222222;
  line-height: 110rpx;
  letter-spacing: 1px;
}
