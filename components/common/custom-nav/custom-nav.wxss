/* components/common/custom-nav/custom-nav.wxss */

.custom-nav {
  width: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  height: 88rpx;
}
.nav {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.back {
  position: relative;
  width: 48rpx;
  height: 88rpx;
  font-size: 48rpx;
  padding-left: 32rpx;
  z-index: 99;
}

.title {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang SC-Semibold, PingFang SC;
  font-weight: 600;
  color: #101010;
}

.search {
  box-sizing: border-box;
  position: absolute;
  left: 112rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  display: flex;
  width: 396rpx;
  align-items: center;
  height: 64rpx;
  background: #f5f7fa;
  border-radius: 60rpx;
}

.search__icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search__input {
  flex: 1;
  padding-right: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #a6a6a6;
}

.search__clear {
  padding: 10rpx;
  width: 20rpx;
  height: 20rpx;
  z-index: 9;
}

.search__cancel {
  top: 50%;
  /* left: 320rpx; */
  right: -84rpx;
  transform: translateY(-50%);
  position: absolute;
  font-size: 28rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}
